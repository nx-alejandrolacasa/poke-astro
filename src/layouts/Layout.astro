---
import '@/styles/global.css'
import Header from '@/components/Header.astro'

export interface Props {
  title: string
}

// biome-ignore lint/correctness/noUnusedVariables: Used in Astro template
const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Prevent flash of wrong theme
      const savedTheme = localStorage.getItem('theme')
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches
      if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
        document.documentElement.classList.add('dark')
      }
    </script>
  </head>
  <body class="bg-white dark:bg-gray-900 transition-colors">
    <Header />
    <main class="mx-auto p-6 max-w-5xl">
      <slot />
    </main>
    <footer class="border-t border-gray-200 dark:border-gray-800 mt-16 py-8">
      <div class="mx-auto max-w-5xl px-6 text-center">
        <p class="text-sm text-gray-600 dark:text-gray-400">
          © {new Date().getFullYear()} Pokémon Astro. Built with Astro, React, and Tailwind CSS.
        </p>
        <p class="text-xs text-gray-500 dark:text-gray-500 mt-2">
          Data provided by <a href="https://pokeapi.co" target="_blank" rel="noopener noreferrer" class="underline hover:text-primary dark:hover:text-primary-400 transition-colors">PokéAPI</a>
        </p>
      </div>
    </footer>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style>
