---
export const prerender = true

import { fetchPokemonPage } from '@utils/pokemon'
import { PokemonInfiniteScrollWrapper } from '@/components/PokemonInfiniteScrollWrapper'
import Layout from '@/layouts/Layout.astro'

// Only fetch the first page at build time
// biome-ignore lint/correctness/noUnusedVariables: Used in Astro template
const initialData = await fetchPokemonPage(1, 30)
---

<Layout title="Pokémon Astro - Pokédex">
  <PokemonInfiniteScrollWrapper client:load initialData={initialData} />
</Layout>
