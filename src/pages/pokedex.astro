---
export const prerender = true

import { fetchPokemonPage } from '@utils/pokemon'
import { PokemonInfiniteScroll } from '@/components/PokemonInfiniteScroll'
import Layout from '@/layouts/Layout.astro'

// Only fetch the first page at build time
// biome-ignore lint/correctness/noUnusedVariables: Used in Astro template
const initialData = await fetchPokemonPage(1, 24)
---

<Layout title="Pokémon Astro - Pokédex">
  <PokemonInfiniteScroll client:only="react" initialData={initialData} />
</Layout>
