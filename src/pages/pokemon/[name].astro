---
export const prerender = true

import Layout from '@layouts/Layout.astro'
import {
  calculateTypeEffectiveness,
  fetchAllPokemonNames,
  fetchEvolutionChain,
  fetchPokemonByName,
  fetchPokemonSpecies,
  getPokemonImage,
  getPokemonName,
  parseEvolutionChain,
} from '@utils/pokemon'

export async function getStaticPaths() {
  // Only fetch names, not full Pokémon data (much faster!)
  const pokemonNames = await fetchAllPokemonNames()
  return pokemonNames.map((name) => ({ params: { name } }))
}

const { name = '' } = Astro.params
const pokemon = await fetchPokemonByName(name)

// Fetch additional data with error handling
const species = await fetchPokemonSpecies(name)
const evolutionChainData = species
  ? await fetchEvolutionChain(species.evolution_chain.url)
  : null
const evolutions = evolutionChainData
  ? parseEvolutionChain(evolutionChainData.chain)
  : []
const typeEffectiveness = await calculateTypeEffectiveness(pokemon)

// Get English flavor text
const flavorText = species?.flavor_text_entries
  .find((entry) => entry.language.name === 'en')
  ?.flavor_text.replace(/\f/g, ' ')

// Get stat names mapping
const statNames: Record<string, string> = {
  hp: 'HP',
  attack: 'Attack',
  defense: 'Defense',
  'special-attack': 'Sp. Atk',
  'special-defense': 'Sp. Def',
  speed: 'Speed',
}
---

<Layout title={`Pokémon Astro - ${getPokemonName(name)}`}>
  {
    pokemon && (
      <div class="space-y-8">
        {/* Header Section with Image and Basic Info */}
        <div class="grid gap-8 grid-cols-1 md:grid-cols-2">
          {/* Left Column - Image */}
          <div class="flex flex-col items-center">
            <img
              class="aspect-square w-full max-w-md"
              src={getPokemonImage(pokemon)}
              alt={`${pokemon.name} official artwork`}
            />
            <h1 class="mt-4 font-bold capitalize text-4xl text-center">
              {getPokemonName(name)}
            </h1>
            <p class="mt-2 text-lg text-gray-400 text-center">
              #{pokemon.order.toString().padStart(3, '0')}
            </p>
          </div>

          {/* Right Column - Basic Info */}
          <div class="space-y-6">
            {/* Description */}
            {flavorText && (
              <div class="border border-gray-700 rounded-lg p-4 bg-gray-800/50">
                <h2 class="mb-2 font-bold text-xl">Description</h2>
                <p class="text-gray-300 leading-relaxed">{flavorText}</p>
              </div>
            )}

            {/* Types */}
            <div class="border border-gray-700 rounded-lg p-4 bg-gray-800/50">
              <h2 class="mb-3 font-bold text-xl">Type</h2>
              <div class="flex gap-2">
                {pokemon.types.map(({ type }) => (
                  <span class="border border-white px-4 py-2 rounded-full capitalize font-semibold">
                    {type.name}
                  </span>
                ))}
              </div>
            </div>

            {/* Physical Stats */}
            <div class="border border-gray-700 rounded-lg p-4 bg-gray-800/50">
              <h2 class="mb-3 font-bold text-xl">Physical Stats</h2>
              <div class="grid gap-2 grid-cols-2">
                <div>
                  <span class="text-gray-400">Height:</span>{' '}
                  <span class="font-semibold">
                    {(pokemon.height / 10).toFixed(1)} m
                  </span>
                </div>
                <div>
                  <span class="text-gray-400">Weight:</span>{' '}
                  <span class="font-semibold">
                    {(pokemon.weight / 10).toFixed(1)} kg
                  </span>
                </div>
              </div>
            </div>

            {/* Abilities */}
            <div class="border border-gray-700 rounded-lg p-4 bg-gray-800/50">
              <h2 class="mb-3 font-bold text-xl">Abilities</h2>
              <div class="flex flex-wrap gap-2">
                {pokemon.abilities.map(({ ability, is_hidden }) => (
                  <span
                    class={`border px-3 py-1 rounded-full capitalize text-sm ${is_hidden ? 'border-yellow-500 text-yellow-400' : 'border-gray-500'}`}
                  >
                    {ability.name.replaceAll('-', ' ')}
                    {is_hidden && ' (Hidden)'}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>

        {/* Base Stats */}
        <div class="border border-gray-700 rounded-lg p-6 bg-gray-800/50">
          <h2 class="mb-4 font-bold text-2xl">Base Stats</h2>
          <div class="space-y-3">
            {pokemon.stats.map(({ stat, base_stat }) => {
              const maxStat = 255
              const percentage = (base_stat / maxStat) * 100
              return (
                <div class="grid gap-4 grid-cols-[120px_60px_1fr]">
                  <div class="text-gray-400 text-right">
                    {statNames[stat.name] || stat.name}
                  </div>
                  <div class="font-semibold text-right">{base_stat}</div>
                  <div class="flex items-center">
                    <div class="relative w-full bg-gray-700 rounded-full h-4">
                      <div
                        class={`absolute top-0 left-0 rounded-full h-4 ${
                          base_stat >= 100
                            ? 'bg-green-500'
                            : base_stat >= 60
                              ? 'bg-yellow-500'
                              : 'bg-red-500'
                        }`}
                        style={`width: ${percentage}%`}
                      />
                    </div>
                  </div>
                </div>
              )
            })}
            <div class="border-gray-700 border-t mt-4 pt-3 grid gap-4 grid-cols-[120px_60px_1fr]">
              <div class="font-bold text-right">Total</div>
              <div class="font-bold text-right">
                {pokemon.stats.reduce((sum, { base_stat }) => sum + base_stat, 0)}
              </div>
              <div />
            </div>
          </div>
        </div>

        {/* Type Effectiveness */}
        <div class="border border-gray-700 rounded-lg p-6 bg-gray-800/50">
          <h2 class="mb-4 font-bold text-2xl">Type Effectiveness</h2>
          <div class="grid gap-6 grid-cols-1 md:grid-cols-3">
            {/* Weaknesses */}
            <div>
              <h3 class="mb-3 font-semibold text-lg text-red-400">
                Weak To ({typeEffectiveness.weaknesses.length})
              </h3>
              {typeEffectiveness.weaknesses.length > 0 ? (
                <div class="flex flex-wrap gap-2">
                  {typeEffectiveness.weaknesses.map(({ type, multiplier }) => (
                    <span class="border border-red-500 bg-red-900/30 px-3 py-1 rounded-full capitalize text-sm">
                      {type} ({multiplier}x)
                    </span>
                  ))}
                </div>
              ) : (
                <p class="text-gray-500 text-sm">None</p>
              )}
            </div>

            {/* Resistances */}
            <div>
              <h3 class="mb-3 font-semibold text-lg text-green-400">
                Resistant To ({typeEffectiveness.resistances.length})
              </h3>
              {typeEffectiveness.resistances.length > 0 ? (
                <div class="flex flex-wrap gap-2">
                  {typeEffectiveness.resistances.map(({ type, multiplier }) => (
                    <span class="border border-green-500 bg-green-900/30 px-3 py-1 rounded-full capitalize text-sm">
                      {type} ({multiplier}x)
                    </span>
                  ))}
                </div>
              ) : (
                <p class="text-gray-500 text-sm">None</p>
              )}
            </div>

            {/* Immunities */}
            <div>
              <h3 class="mb-3 font-semibold text-lg text-blue-400">
                Immune To ({typeEffectiveness.immunities.length})
              </h3>
              {typeEffectiveness.immunities.length > 0 ? (
                <div class="flex flex-wrap gap-2">
                  {typeEffectiveness.immunities.map((type) => (
                    <span class="border border-blue-500 bg-blue-900/30 px-3 py-1 rounded-full capitalize text-sm">
                      {type} (0x)
                    </span>
                  ))}
                </div>
              ) : (
                <p class="text-gray-500 text-sm">None</p>
              )}
            </div>
          </div>
        </div>

        {/* Evolution Chain */}
        {evolutions.length > 1 && evolutionChainData && (
          <div class="border border-gray-700 rounded-lg p-6 bg-gray-800/50">
            <h2 class="mb-4 font-bold text-2xl">Evolution Chain</h2>
            <div class="flex flex-wrap justify-center items-center gap-4">
              {evolutions.map((evoName, index) => {
                // Get Pokemon ID from evolution chain
                const getEvolutionNode = (node: typeof evolutionChainData.chain, targetName: string): typeof evolutionChainData.chain | null => {
                  if (node.species.name === targetName) return node
                  for (const evo of node.evolves_to) {
                    const found = getEvolutionNode(evo, targetName)
                    if (found) return found
                  }
                  return null
                }

                const evoNode = getEvolutionNode(evolutionChainData.chain, evoName)
                const evoId = evoNode?.species.url.split('/').slice(-2, -1)[0]

                return (
                  <>
                    <a
                      href={`/pokemon/${evoName}`}
                      class={`border rounded-lg p-4 transition-all hover:border-white hover:scale-105 ${
                        evoName === name
                          ? 'border-white bg-gray-700'
                          : 'border-gray-600'
                      }`}
                    >
                      <div class="text-center">
                        <p class="mb-2 font-semibold capitalize">
                          {getPokemonName(evoName)}
                        </p>
                        {evoId && (
                          <img
                            src={`https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${evoId}.png`}
                            alt={evoName}
                            class="mx-auto w-24 h-24 object-contain"
                            loading="lazy"
                          />
                        )}
                      </div>
                    </a>
                    {index < evolutions.length - 1 && (
                      <div class="font-bold text-2xl text-gray-500">→</div>
                    )}
                  </>
                )
              })}
            </div>
          </div>
        )}
      </div>
    )
  }
</Layout>
