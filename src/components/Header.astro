---
import { DarkModeToggle } from '@/components/DarkModeToggle'
import { PokemonSearch } from '@/components/PokemonSearch'
---

<header class="sticky top-0 z-40 border-b border-gray-200 bg-white/95 shadow-sm backdrop-blur-sm transition-colors dark:border-gray-700 dark:bg-gray-900/95">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <nav class="flex h-20 items-center justify-between gap-4 md:gap-8">
      <!-- Logo -->
      <a
        href="/"
        title="Go home"
        class="flex-shrink-0 transition-transform hover:scale-105"
      >
        <img
          class="h-12 sm:h-14"
          src="/pokemon-logo.svg"
          alt="Pokemon"
        />
      </a>

      <!-- Search - Hidden on mobile, shown on tablet+ -->
      <div class="hidden flex-1 md:flex md:justify-center md:px-4">
        <div class="w-full max-w-lg">
          <PokemonSearch client:load />
        </div>
      </div>

      <!-- Navigation links -->
      <div class="flex items-center gap-3 sm:gap-4">
        <a
          class="group relative overflow-hidden rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 px-4 py-2 font-semibold text-white shadow-md transition-all hover:shadow-lg hover:scale-105 active:scale-95 sm:px-5 sm:py-2.5"
          href="/pokedex"
        >
          <span class="relative z-10">Pok√©dex</span>
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-700 opacity-0 transition-opacity group-hover:opacity-100"></div>
        </a>
        <DarkModeToggle client:load />
      </div>
    </nav>

    <!-- Mobile search - Shown only on mobile -->
    <div class="pb-4 md:hidden">
      <PokemonSearch client:load />
    </div>
  </div>
</header>
